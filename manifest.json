{
	"manifest_version": 2,
   
	"name": "PLATO CALENDAR",
	"description": "PLATO 캘린더",
	"version": "1.0",
	"icons": {
        "16": "default.png",
        "48": "default.png",
        "128": "default.png"
    },

	"background": {
		"scripts": ["background.js", "lib/jquery.js"],
		"persistent": true
	},

	"permissions": [
		"http://plato.pusan.ac.kr/*/",
		"https://plato.pusan.ac.kr/*/"
	],

	"content_scripts": [
	    {
	      "matches": ["https://plato.pusan.ac.kr/"],
	      "js": ["content.js"]
	    }
  	]
  }